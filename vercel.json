{
  "version": 2,
  "name": "rdv-project",
  "buildCommand": "npm run build",
  "outputDirectory": "frontend/build",
  "functions": {
    "backend/api/index.js": {
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/build/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "CI": "false",
    "GENERATE_SOURCEMAP": "false"
  }
}